#main
    width: 100%
    min-height: 100vh
    display: flex
    align-items: center
    justify-content: center
    background-image: linear-gradient(45deg, #333333 0%,#670e25 100%)
    padding: 20px 10px

    &>div
        max-width: 1000px
        width: 100%

        &>h1
            color: white
            font-size: 36px
            text-align: center
            font-weight: normal
            margin-bottom: 20px

            span
                display inline-table
                margin-right: 20px
                vertical-align: middle

            img
                display: inline-table
                max-width: 150px
                vertical-align: middle

        &>div
            background-color: rgba(255, 255, 255, 0.4)
            padding: 20px
            border-radius: 30px

            .table
                width: 100%
                max-width: 100%
                border: solid 2px gray
                overflow auto
                text-align: center

                table
                    width: 100%
                    min-width: max-content
                    border-collapse: collapse;
                    margin-bottom: 20px
                    text-align: center

                    th
                        background-color: rgba(255, 255, 255, 0.9)
                        text-align left
                        padding 10px
                        color escala-cinza-1
                        font-weight bold
                        text-align: center

                    td
                        background-color: rgba(255, 255, 255, 0.6)
                        padding 8px 10px
                        background escala-cinza-1
                        padding: 10px
                        text-align: center

                        a
                            font-size: 18px
                            display: inline-table
                            cursor pointer
                            color #b8474e
                            margin 0 0 0 5px

                            &:first-child
                                margin 0
                                color #518ea0

                    tr:nth-child(2n) td
                        background-color: rgba(255, 255, 255, 0.7)

                    tr:hover td
                        background-color: rgba(255, 255, 255, 0.9)
                        cursor: default

            .butons
                padding: 20px 0;
                text-align: center;

                a
                    display inline-table
                    padding: 5px 40px
                    margin: 10px
                    font-size: 18px
                    border-radius: 20px
                    color: white
                    background-color: #7a001f
                    font-weight: light
                    cursor pointer
                    transition: 0.5s

                    &:nth-child(2n), &.btn-ok
                        background-color: #379346

                    &:hover
                        transform: scale(1.1)

            &>p
                color: white
                text-align: center
                font-size: 20px
                padding: 0 0 30px

            &>img
                display: table
                max-width: 500px
                width: 00%
                margin: 0 auto


